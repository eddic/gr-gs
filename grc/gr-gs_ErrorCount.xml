<?xml version="1.0"?>
<block>
    <name>Error Count</name>
    <key>gr_gs_ErrorCount</key>
    <category>[gr-gs]/Miscellaneous</category>
    <import>import gr_gs as gs</import>
    <make>gs.ErrorCount_$(symbolType.fcn)(True, $framingTag, $maxErrors, $maxSymbols)</make>
	<param>
		<name>Symbol Type</name>
		<key>symbolType</key>
		<type>enum</type>
		<option>
			<name>Byte</name>
			<key>byte</key>
			<opt>fcn:bf</opt>
		</option>
		<option>
			<name>Short</name>
			<key>short</key>
			<opt>fcn:sf</opt>
		</option>
		<option>
			<name>Int</name>
			<key>int</key>
			<opt>fcn:if</opt>
		</option>
	</param>
    <param>
        <name>Framing Tag</name>
        <key>framingTag</key>
        <value></value>
        <type>string</type>
        <hide>part</hide>
    </param>
    <param>
        <name>Max Errors</name>
        <key>maxErrors</key>
        <value>0</value>
        <type>int</type>
    </param>
    <param>
        <name>Max Symbols</name>
        <key>maxSymbols</key>
        <value>0</value>
        <type>int</type>
    </param>
    <sink>
        <name>fast</name>
        <type>$symbolType</type>
    </sink>
    <sink>
        <name>slow</name>
        <type>$symbolType</type>
    </sink>
    <source>
        <name>out</name>
        <type>float</type>
    </source>
    <doc>This block is used for calculating total error counts and rates for framed symbol sequences over all time.</doc>
</block>
