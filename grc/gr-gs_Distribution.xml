<?xml version="1.0"?>
<block>
    <name>Distribution</name>
    <key>gr_gs_Distribution</key>
    <category>[gr-gs]/Miscellaneous</category>
    <import>import gr_gs as gs</import>
    <make>gs.Distribution_$(sampleType.fcn)($bins, $binSize, $leastBinCenter, $decimation)</make>
	<param>
		<name>Sample Type</name>
		<key>sampleType</key>
		<type>enum</type>
		<option>
			<name>Float</name>
			<key>float</key>
			<opt>fcn:ff</opt>
			<opt>imag:0</opt>
		</option>
		<option>
			<name>Complex</name>
			<key>complex</key>
			<opt>fcn:cf</opt>
			<opt>imag:1j</opt>
		</option>
	</param>
    <param>
        <name>Number of Bins</name>
        <key>bins</key>
        <value>32</value>
        <type>int</type>
    </param>
    <param>
        <name>Size of Bins</name>
        <key>binSize</key>
        <value>1</value>
        <type>float</type>
    </param>
    <param>
        <name>Center of least most Bin</name>
        <key>leastBinCenter</key>
        <value>-$bins * (1+$(sampleType.imag))/2</value>
        <type>$sampleType</type>
    </param>
    <param>
        <name>Decimation</name>
        <key>decimation</key>
        <value>1024</value>
        <type>int</type>
    </param>
    <sink>
        <name>in</name>
        <type>$sampleType</type>
    </sink>
    <source>
        <name>out</name>
        <type>float</type>
        <vlen>$bins</vlen>
    </source>
    <doc>This block generates a probability distribution of the input values.</doc>
</block>
