<?xml version="1.0"?>
<block>
    <name>Entropy</name>
    <key>gr_gs_Entropy</key>
    <category>[gr-gs]/Guided Scrambling</category>
    <import>import gr_gs as gs</import>
    <make>gs.Entropy_$(symbolType.fcn)($fieldSize, $codewordLength, $augmentingLength, $minCorrelation, $framingTag)</make>
	<param>
		<name>Symbol Type</name>
		<key>symbolType</key>
		<type>enum</type>
		<option>
			<name>Byte</name>
			<key>byte</key>
			<opt>fcn:bf</opt>
		</option>
		<option>
			<name>Short</name>
			<key>short</key>
			<opt>fcn:sf</opt>
		</option>
		<option>
			<name>Int</name>
			<key>int</key>
			<opt>fcn:if</opt>
		</option>
	</param>
    <param>
        <name>Field Size</name>
        <key>fieldSize</key>
        <value>4</value>
        <type>int</type>
        <option>
            <name>2</name>
            <key>2</key>
        </option>
        <option>
            <name>4</name>
            <key>4</key>
        </option>
        <option>
            <name>8</name>
            <key>8</key>
        </option>
        <option>
            <name>16</name>
            <key>16</key>
        </option>
    </param>
    <param>
        <name>Codeword Length</name>
        <key>codewordLength</key>
        <value>12</value>
        <type>int</type>
    </param>
    <param>
        <name>Augmenting Length</name>
        <key>augmentingLength</key>
        <value>3</value>
        <type>int</type>
    </param>
    <param>
        <name>Minimum Correlation</name>
        <key>minCorrelation</key>
        <value>0.01</value>
        <type>float</type>
    </param>
    <param>
        <name>Framing Tag</name>
        <key>framingTag</key>
        <value></value>
        <type>string</type>
        <hide>part</hide>
    </param>
    <sink>
        <name>in</name>
        <type>$symbolType</type>
    </sink>
    <source>
        <name>out</name>
        <type>float</type>
    </source>
</block>
