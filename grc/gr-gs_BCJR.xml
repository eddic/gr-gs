<?xml version="1.0"?>
<block>
    <name>BCJR</name>
    <key>gr_gs_BCJR</key>
    <category>[gr-gs]/Guided Scrambling</category>
    <import>import gr_gs as gs</import>
    <make>gs.BCJR_$(symbolType.fcn)($fieldSize, $codewordLength, $augmentingLength, $minCorrelation, $noisePower, $windowSize, $maxErrors, $maxSymbols)</make>
    <callback>set_noisePower($noisePower)</callback>
	<param>
		<name>Symbol Type</name>
		<key>symbolType</key>
		<type>enum</type>
		<option>
			<name>Byte</name>
			<key>byte</key>
			<opt>fcn:cb</opt>
		</option>
		<option>
			<name>Short</name>
			<key>short</key>
			<opt>fcn:cs</opt>
		</option>
		<option>
			<name>Int</name>
			<key>int</key>
			<opt>fcn:ci</opt>
		</option>
	</param>
    <param>
        <name>Field Size</name>
        <key>fieldSize</key>
        <value>4</value>
        <type>int</type>
        <option>
            <name>2</name>
            <key>2</key>
        </option>
        <option>
            <name>4</name>
            <key>4</key>
        </option>
        <option>
            <name>8</name>
            <key>8</key>
        </option>
        <option>
            <name>16</name>
            <key>16</key>
        </option>
    </param>
    <param>
        <name>Codeword Length</name>
        <key>codewordLength</key>
        <value>12</value>
        <type>int</type>
    </param>
    <param>
        <name>Augmenting Length</name>
        <key>augmentingLength</key>
        <value>3</value>
        <type>int</type>
    </param>
    <param>
        <name>Minimum Correlation</name>
        <key>minCorrelation</key>
        <value>0.01</value>
        <type>float</type>
    </param>
    <param>
        <name>Noise Power (variance)</name>
        <key>noisePower</key>
        <value>0.25</value>
        <type>float</type>
    </param>
    <param>
        <name>Window Size</name>
        <key>windowSize</key>
        <value>1024</value>
        <type>int</type>
    </param>
    <param>
        <name>Max Errors</name>
        <key>maxErrors</key>
        <value>0</value>
        <type>int</type>
    </param>
    <param>
        <name>Max Symbols</name>
        <key>maxSymbols</key>
        <value>0</value>
        <type>int</type>
    </param>
    <sink>
        <name>Noisy</name>
        <type>complex</type>
    </sink>
    <sink>
        <name>Clean</name>
        <type>$symbolType</type>
    </sink>
</block>
