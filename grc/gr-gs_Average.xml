<?xml version="1.0"?>
<block>
    <name>Average</name>
    <key>gr_gs_Average</key>
    <category>[gr-gs]/Miscellaneous</category>
    <import>import gr_gs as gs</import>
    <make>gs.Average_$(sampleType.fcn)($vectorSize, $decimation)</make>
	<param>
		<name>Sample Type</name>
		<key>sampleType</key>
		<type>enum</type>
		<option>
			<name>Float</name>
			<key>float</key>
			<opt>fcn:ff</opt>
		</option>
		<option>
			<name>Complex</name>
			<key>complex</key>
			<opt>fcn:cc</opt>
		</option>
	</param>
    <param>
        <name>Vector Size</name>
        <key>vectorSize</key>
        <value>1</value>
        <type>int</type>
    </param>
    <param>
        <name>Decimation</name>
        <key>decimation</key>
        <value>256</value>
        <type>int</type>
    </param>
    <sink>
        <name>in</name>
        <type>$sampleType</type>
        <vlen>$vectorSize</vlen>
    </sink>
    <source>
        <name>out</name>
        <type>$sampleType</type>
        <vlen>$vectorSize</vlen>
    </source>
    <doc>This block averages a sequence of vectors over all time. The output is a vector in which all received input vectors carry equal weight in the average.</doc>
</block>
